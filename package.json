{
  "name": "@rollercoaster-dev/rd-logger",
  "version": "0.2.1",
  "type": "module",
  "description": "A neurodivergent-friendly logger for Rollercoaster.dev projects",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./core/logger.service": "./dist/core/logger.service.js"
  },
  "scripts": {
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "test": "jest --config jest.config.cjs",
    "test:vitest": "vitest run test/exports.test.ts",
    "test:watch": "jest --config jest.config.cjs --watch",
    "test:cov": "jest --config jest.config.cjs --coverage",
    "validate": "pnpm lint && pnpm typecheck && pnpm test",
    "prepublishOnly": "pnpm validate && pnpm build",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "release:patch": "standard-version --release-as patch",
    "release:alpha": "standard-version --prerelease alpha",
    "release:beta": "standard-version --prerelease beta",
    "prepare": "husky && husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rollercoaster-dev/rd-logger.git"
  },
  "keywords": [
    "logger",
    "logging",
    "typescript",
    "neurodiversity",
    "accessibility",
    "rollercoaster-dev"
  ],
  "author": "Rollercoaster.dev <team@rollercoaster.dev>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rollercoaster-dev/rd-logger/issues"
  },
  "homepage": "https://github.com/rollercoaster-dev/rd-logger#readme",
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@hono/node-server": "^1.14.1",
    "@sinclair/typebox": "^0.34.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.12",
    "@types/on-finished": "^2.3.4",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "elysia": "^1.0.0",
    "eslint": "^8.57.0",
    "express": "^4.19.2",
    "hono": "^4.5.2",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.1",
    "on-finished": "^2.4.1",
    "standard-version": "^9.5.0",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.2",
    "tsc-files": "^1.1.4",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "on-finished": "^2.4.1"
  },
  "peerDependencies": {
    "@sinclair/typebox": ">= 0.34.0",
    "elysia": ">= 1.0.0",
    "express": ">= 4.0.0",
    "hono": ">= 4.0.0"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "tsc-files --noEmit"
    ]
  }
}
